//                'read_page_mailboxes'
        });
        return false;
    }

    function logout() {
        FB.logout(function(response) {
            // Person is now logged out
            alert('logged out');
            $.ajax({
                url: 'user/logout_callback',
                success: function(data){
                    $('#user-fb-name').text('');
                    get_status();
                },
                error: function (err1, err2) {
                    alert(JSON.stringify(err1) + '\n' + JSON.stringify(err2));
                }
            });
        });
        return false;
    }

    function get_status() {
        FB.getLoginStatus(function(response) {
            var $btn_login = $('#btn-login');
            var $btn_logout = $('#btn-logout');
            var $user_info = $('#get-user-info');
            var $user_friends = $('#get-user-friends');
            var $user_fb_name = $('#user-fb-name');
            if(response.status == 'connected'){
                $btn_login.hide();
                $btn_logout.show();
                FB.api('/me?fields=name', function(response) {
                    $user_fb_name.text('Mire se erdhe, ' + response.name).show();
                });
                $user_info.show();
                $user_friends.show();
            } else {
                $btn_login.show();
                $btn_logout.hide();
                $user_info.hide();
                $user_friends.hide();
                $user_fb_name.text('');
                $user_fb_name.hide();
            }
            console.log('status: ', response.status);
        });
        return false;
    }

